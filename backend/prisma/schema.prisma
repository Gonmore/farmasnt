generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum ModuleCode {
  WAREHOUSE
  SALES
  PRODUCTION
  DISTRIBUTION
  RND
  LABORATORY
}

enum LocationType {
  BIN
  SHELF
  FLOOR
}

enum StockMovementType {
  IN
  OUT
  TRANSFER
  ADJUSTMENT
}

enum StockMovementRequestStatus {
  OPEN
  SENT // New status for sent but not received requests
  FULFILLED
  CANCELLED
}

enum StockMovementRequestConfirmationStatus {
  PENDING
  ACCEPTED
  REJECTED
}

enum SalesOrderStatus {
  DRAFT
  CONFIRMED
  FULFILLED
  CANCELLED
}

enum QuoteStatus {
  CREATED
  PROCESSED
}

enum ThemeMode {
  LIGHT
  DARK
}

enum ReportScheduleType {
  SALES
  STOCK
}

enum SupplyCategory {
  RAW_MATERIAL
  MAINTENANCE
}

enum ReportFrequency {
  DAILY
  WEEKLY
  MONTHLY
}

enum BatchStatus {
  RELEASED
  QUARANTINE
}

enum SupplyStockMovementType {
  IN
  OUT
  TRANSFER
  ADJUSTMENT
}

enum SupplyPurchaseListStatus {
  DRAFT
  CLOSED
  CANCELLED
}

enum SupplyReceiptStatus {
  DRAFT
  POSTED
  CANCELLED
}

enum LabProductionRequestStatus {
  DRAFT
  APPROVED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum LabProductionRunStatus {
  DRAFT
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

model Tenant {
  id        String   @id @default(uuid())
  name      String
  isActive  Boolean  @default(true)
  country   String?  @default("BOLIVIA")
  logoUrl   String?
  brandPrimary  String?
  brandSecondary String?
  brandTertiary  String?
  defaultTheme ThemeMode @default(LIGHT)
  branchLimit Int    @default(1)
  currency String   @default("BOB")
  
  // Subscription Management Fields
  contactName   String?
  contactEmail  String?
  contactPhone  String?
  subscriptionExpiresAt DateTime?
  
  version   Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String?

  users   User[]
  roles   Role[]
  modules TenantModule[]
  domains TenantDomain[]
  passwordResetTokens PasswordResetToken[]

  @@index([isActive])
  @@index([subscriptionExpiresAt])
}

model ContactInfo {
  id        String   @id @default(uuid())
  // Solo debe haber un registro activo
  modalHeader String  @default("Contactos")
  modalBody   String  @default("Ãšnete a este sistema o solicita el tuyo personalizado:\n- ðŸ“§ contactos@supernovatel.com\n- ðŸ’¬ +591 65164773")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  updatedBy String?
}

model TenantDomain {
  id        String   @id @default(uuid())
  tenantId  String
  domain    String
  isPrimary Boolean  @default(false)
  verifiedAt DateTime?
  verificationToken String?
  verificationTokenExpiresAt DateTime?
  createdAt DateTime @default(now())
  createdBy String?

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([domain])
  @@index([tenantId])
}

model User {
  id           String   @id @default(uuid())
  tenantId     String
  email        String
  passwordHash String
  fullName     String?
  photoUrl     String?
  photoKey     String?
  warehouseId  String?
  isActive     Boolean  @default(true)
  version      Int      @default(1)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  createdBy    String?

  tenant       Tenant   @relation(fields: [tenantId], references: [id], onDelete: Restrict)
  warehouse    Warehouse? @relation(fields: [warehouseId], references: [id], onDelete: SetNull)
  roles        UserRole[]
  refreshTokens RefreshToken[]
  passwordResetTokens PasswordResetToken[]
  auditEvents  AuditEvent[] @relation("AuditActor")

  @@unique([tenantId, email])
  @@index([tenantId])
  @@index([email])
  @@index([warehouseId])
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  tenantId  String
  userId    String
  tokenHash String
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())
  createdBy String?

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([tokenHash])
  @@index([tenantId])
  @@index([userId])
  @@index([expiresAt])
}

model Role {
  id        String   @id @default(uuid())
  tenantId  String
  code      String
  name      String
  isSystem  Boolean  @default(false)
  version   Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String?

  tenant      Tenant         @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  users       UserRole[]
  permissions RolePermission[]

  @@unique([tenantId, code])
  @@index([tenantId])
}

model Permission {
  id          String     @id @default(uuid())
  code        String     @unique
  module      ModuleCode
  description String?
  isSystem    Boolean    @default(true)
  createdAt   DateTime   @default(now())

  roles RolePermission[]
}

model RolePermission {
  roleId       String
  permissionId String

  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@id([roleId, permissionId])
}

model UserRole {
  userId String
  roleId String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@id([userId, roleId])
}

model TenantModule {
  id       String     @id @default(uuid())
  tenantId String
  module   ModuleCode
  enabled  Boolean    @default(true)
  version  Int        @default(1)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  createdBy String?

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, module])
  @@index([tenantId])
}

model Customer {
  id        String   @id @default(uuid())
  tenantId  String
  name      String
  businessName String?
  nit       String?
  contactName String?
  contactBirthDay Int?
  contactBirthMonth Int?
  contactBirthYear Int?
  email     String?
  phone     String?
  address   String?
  city      String?
  zone      String?
  mapsUrl   String?
  isActive  Boolean  @default(true)
  // Legacy flags (kept for backwards compatibility)
  creditDays7Enabled  Boolean  @default(false)
  creditDays14Enabled Boolean  @default(false)
  // New flexible credit configuration
  creditEnabled Boolean @default(false)
  creditDays    Int?
  version   Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String?

  salesOrders SalesOrder[]
  quotes      Quote[]

  @@index([tenantId])
  @@index([tenantId, name])
}

model Product {
  id          String   @id @default(uuid())
  tenantId    String
  sku         String
  name        String
  genericName String?
  description String?
  presentationWrapper String?
  presentationQuantity Decimal?
  presentationFormat String?
  photoUrl    String?
  photoKey    String?
  cost        Decimal?
  price       Decimal?
  isActive    Boolean  @default(true)
  version     Int      @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   String?

  batches Batch[]
  recipe Recipe?
  recipeItemsAsIngredient RecipeItem[] @relation("RecipeItemIngredientProduct")
  balances InventoryBalance[]
  stockMovements StockMovement[]
  presentations ProductPresentation[]
  salesOrderLines SalesOrderLine[]
  quoteLines      QuoteLine[]
  stockMovementRequestItems StockMovementRequestItem[]
  stockReturnItems StockReturnItem[] @relation("StockReturnItemProduct")
  labRecipes LabRecipe[]
  labProductionRequests LabProductionRequest[]
  labProductionRuns LabProductionRun[]

  @@unique([tenantId, sku])
  @@index([tenantId])
  @@index([tenantId, name])
}

model ProductPresentation {
  id                 String   @id @default(uuid())
  tenantId           String
  productId          String
  name               String
  unitsPerPresentation Decimal @default(1)
  priceOverride      Decimal?
  isDefault          Boolean  @default(false)
  sortOrder          Int      @default(0)
  isActive           Boolean  @default(true)
  version            Int      @default(1)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  createdBy          String?

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  quoteLines QuoteLine[]
  salesOrderLines SalesOrderLine[]
  stockMovements StockMovement[]
  stockMovementRequestItems StockMovementRequestItem[]
  stockReturnItems StockReturnItem[] @relation("StockReturnItemPresentation")
  batches Batch[]

  @@unique([tenantId, productId, name])
  @@index([tenantId])
  @@index([tenantId, productId])
  @@index([productId])
}

model Recipe {
  id             String   @id @default(uuid())
  tenantId       String
  productId      String   @unique
  name           String
  outputQuantity Decimal?
  outputUnit     String?
  version        Int      @default(1)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  createdBy      String?

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  items   RecipeItem[]

  @@unique([tenantId, productId])
  @@index([tenantId])
  @@index([productId])
}

model RecipeItem {
  id                 String   @id @default(uuid())
  tenantId           String
  recipeId           String
  ingredientProductId String?
  ingredientName     String?
  quantity           Decimal
  unit               String
  sortOrder          Int      @default(0)
  note               String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  createdBy          String?

  recipe            Recipe  @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  ingredientProduct Product? @relation("RecipeItemIngredientProduct", fields: [ingredientProductId], references: [id], onDelete: Restrict)

  @@index([tenantId])
  @@index([recipeId])
  @@index([ingredientProductId])
}

model Batch {
  id               String   @id @default(uuid())
  tenantId         String
  productId        String
  batchNumber      String
  manufacturingDate DateTime?
  expiresAt        DateTime?
  presentationId   String?
  status           BatchStatus   @default(RELEASED)
  quarantineUntil  DateTime?
  qcReleasedAt     DateTime?
  qcReleasedBy     String?
  qcRejectedAt     DateTime?
  qcRejectedBy     String?
  qcNote           String?
  sourceType       String?
  sourceId         String?
  openedAt         DateTime?
  openedBy         String?
  version          Int      @default(1)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  createdBy        String?

  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)
  presentation ProductPresentation? @relation(fields: [presentationId], references: [id], onDelete: SetNull)

  balances InventoryBalance[]
  stockMovements StockMovement[]
  salesOrderLines SalesOrderLine[]
  stockReturnItems StockReturnItem[] @relation("StockReturnItemBatch")
  labProductionRunOutputs LabProductionRunOutput[]

  @@unique([tenantId, productId, batchNumber])
  @@index([tenantId])
  @@index([tenantId, productId])
  @@index([status])
  @@index([quarantineUntil])
  @@index([expiresAt])
  @@index([presentationId])
  @@index([openedAt])
}

model Warehouse {
  id        String   @id @default(uuid())
  tenantId  String
  code      String
  name      String
  city      String?
  isActive  Boolean  @default(true)
  version   Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String?

  locations Location[]
  laboratories Laboratory[] @relation("LaboratoryWarehouse")
  outputLaboratories Laboratory[] @relation("LaboratoryOutputWarehouse")
  users     User[]
  stockMovementRequests StockMovementRequest[]

  @@unique([tenantId, code])
  @@index([tenantId])
}

model Laboratory {
  id                String   @id @default(uuid())
  tenantId          String
  warehouseId       String
  name              String
  city              String?
  isActive          Boolean  @default(true)
  defaultLocationId String?
  rawMaterialsLocationId String?
  wipLocationId     String?
  maintenanceLocationId String?
  outputWarehouseId String?
  quarantineLocationId String?
  version           Int      @default(1)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  createdBy         String?

  warehouse       Warehouse @relation("LaboratoryWarehouse", fields: [warehouseId], references: [id], onDelete: Cascade)
  defaultLocation Location? @relation("LaboratoryDefaultLocation", fields: [defaultLocationId], references: [id], onDelete: SetNull)
  rawMaterialsLocation Location? @relation("LaboratoryRawMaterialsLocation", fields: [rawMaterialsLocationId], references: [id], onDelete: SetNull)
  wipLocation Location? @relation("LaboratoryWipLocation", fields: [wipLocationId], references: [id], onDelete: SetNull)
  maintenanceLocation Location? @relation("LaboratoryMaintenanceLocation", fields: [maintenanceLocationId], references: [id], onDelete: SetNull)
  outputWarehouse Warehouse? @relation("LaboratoryOutputWarehouse", fields: [outputWarehouseId], references: [id], onDelete: SetNull)
  quarantineLocation Location? @relation("LaboratoryQuarantineLocation", fields: [quarantineLocationId], references: [id], onDelete: SetNull)

  supplyPurchaseLists SupplyPurchaseList[]
  supplyReceipts SupplyReceipt[]
  labProductionRequests LabProductionRequest[]
  labProductionRuns LabProductionRun[]

  @@unique([tenantId, warehouseId])
  @@unique([tenantId, city])
  @@index([tenantId])
  @@index([warehouseId])
  @@index([city])
  @@index([rawMaterialsLocationId])
  @@index([wipLocationId])
  @@index([maintenanceLocationId])
  @@index([outputWarehouseId])
  @@index([quarantineLocationId])
}

model Location {
  id          String       @id @default(uuid())
  tenantId    String
  warehouseId String
  code        String
  type        LocationType @default(BIN)
  isActive    Boolean      @default(true)
  version     Int          @default(1)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  createdBy   String?

  warehouse Warehouse @relation(fields: [warehouseId], references: [id], onDelete: Cascade)
  balances  InventoryBalance[]
  supplyBalances SupplyInventoryBalance[]
  laboratoryDefaultFor Laboratory[] @relation("LaboratoryDefaultLocation")
  laboratoryRawMaterialsFor Laboratory[] @relation("LaboratoryRawMaterialsLocation")
  laboratoryWipFor Laboratory[] @relation("LaboratoryWipLocation")
  laboratoryMaintenanceFor Laboratory[] @relation("LaboratoryMaintenanceLocation")
  laboratoryQuarantineFor Laboratory[] @relation("LaboratoryQuarantineLocation")
  stockReturns StockReturn[] @relation("StockReturnToLocation")

  @@unique([tenantId, warehouseId, code])
  @@index([tenantId])
  @@index([warehouseId])
}

model InventoryBalance {
  id         String   @id @default(uuid())
  tenantId   String
  locationId String
  productId  String
  batchId    String?
  quantity   Decimal  @default(0)
  reservedQuantity Decimal @default(0)
  version    Int      @default(1)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  createdBy  String?

  location Location @relation(fields: [locationId], references: [id], onDelete: Restrict)
  product  Product  @relation(fields: [productId], references: [id], onDelete: Restrict)
  batch    Batch?   @relation(fields: [batchId], references: [id], onDelete: Restrict)

  reservations SalesOrderReservation[]

  @@unique([tenantId, locationId, productId, batchId])
  @@index([tenantId])
  @@index([productId])
  @@index([batchId])
}

model StockMovement {
  id             String           @id @default(uuid())
  tenantId       String
  number         String
  numberYear     Int
  type           StockMovementType
  productId      String
  batchId        String?
  fromLocationId String?
  toLocationId   String?
  quantity       Decimal
  presentationId String?
  presentationQuantity Decimal?
  referenceType  String?
  referenceId    String?
  note           String?
  version        Int      @default(1)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  createdBy      String?

  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)
  batch   Batch?  @relation(fields: [batchId], references: [id], onDelete: Restrict)
  presentation ProductPresentation? @relation(fields: [presentationId], references: [id], onDelete: SetNull)

  @@unique([tenantId, number])

  @@index([tenantId])
  @@index([productId])
  @@index([batchId])
  @@index([createdAt])
}

model StockMovementRequest {
  id            String                    @id @default(uuid())
  tenantId      String
  warehouseId   String?
  status        StockMovementRequestStatus @default(OPEN)
  confirmationStatus StockMovementRequestConfirmationStatus @default(PENDING)
  requestedCity String
  quoteId       String?
  requestedBy   String
  fulfilledAt   DateTime?
  fulfilledBy   String?
  confirmedAt   DateTime?
  confirmedBy   String?
  confirmationNote String?
  note          String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  quote Quote? @relation(fields: [quoteId], references: [id], onDelete: SetNull)
  warehouse Warehouse? @relation(fields: [warehouseId], references: [id], onDelete: SetNull)

  items StockMovementRequestItem[]

  @@index([tenantId])
  @@index([tenantId, status])
  @@index([tenantId, confirmationStatus])
  @@index([tenantId, warehouseId])
  @@index([tenantId, requestedCity])
  @@index([tenantId, requestedCity, status])
  @@index([quoteId])
  @@index([requestedBy])
}

model StockMovementRequestItem {
  id         String   @id @default(uuid())
  tenantId   String
  requestId  String
  productId  String
  requestedQuantity Decimal
  remainingQuantity Decimal
  presentationId String?
  presentationQuantity Decimal?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  request StockMovementRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)
  product Product              @relation(fields: [productId], references: [id], onDelete: Restrict)
  presentation ProductPresentation? @relation(fields: [presentationId], references: [id], onDelete: SetNull)

  @@index([tenantId])
  @@index([requestId])
  @@index([tenantId, productId])
  @@index([tenantId, productId, remainingQuantity])
}

model StockReturn {
  id           String   @id @default(uuid())
  tenantId     String
  toLocationId String
  sourceType   String?
  sourceId     String?
  reason       String
  photoKey     String?
  photoUrl     String?
  note         String?
  version      Int      @default(1)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  createdBy    String?

  toLocation Location @relation("StockReturnToLocation", fields: [toLocationId], references: [id], onDelete: Restrict)
  items      StockReturnItem[]

  @@index([tenantId])
  @@index([tenantId, createdAt])
  @@index([tenantId, toLocationId])
}

model StockReturnItem {
  id                   String   @id @default(uuid())
  tenantId             String
  returnId             String
  productId            String
  batchId              String?
  quantity             Decimal
  presentationId       String?
  presentationQuantity Decimal?
  createdAt            DateTime @default(now())
  createdBy            String?

  stockReturn StockReturn @relation(fields: [returnId], references: [id], onDelete: Cascade)
  product     Product     @relation("StockReturnItemProduct", fields: [productId], references: [id], onDelete: Restrict)
  batch       Batch?      @relation("StockReturnItemBatch", fields: [batchId], references: [id], onDelete: Restrict)
  presentation ProductPresentation? @relation("StockReturnItemPresentation", fields: [presentationId], references: [id], onDelete: SetNull)

  @@index([tenantId])
  @@index([returnId])
  @@index([tenantId, productId])
}

model TenantSequence {
  id           String   @id @default(uuid())
  tenantId     String
  year         Int
  key          String
  currentValue Int      @default(0)
  updatedAt    DateTime @updatedAt

  @@unique([tenantId, year, key])
  @@index([tenantId])
}

model SalesOrder {
  id         String           @id @default(uuid())
  tenantId   String
  number     String
  customerId String
  quoteId    String?
  status     SalesOrderStatus @default(DRAFT)
  // Payment tracking
  paymentMode String          @default("CASH")
  deliveredAt DateTime?
  paidAt      DateTime?
  paidBy      String?
  paidAmount  Decimal         @default(0)
  paymentReceiptType String?
  paymentReceiptRef String?
  paymentReceiptPhotoUrl String?
  paymentReceiptPhotoKey String?
  note       String?
  deliveryDate DateTime?
  deliveryCity String?
  deliveryZone String?
  deliveryAddress String?
  deliveryMapsUrl String?
  version    Int              @default(1)
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt
  createdBy  String?

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Restrict)
  quote    Quote?   @relation(fields: [quoteId], references: [id], onDelete: Restrict)
  lines    SalesOrderLine[]
  reservations SalesOrderReservation[]

  @@unique([tenantId, number])
  @@unique([quoteId])
  @@index([tenantId])
  @@index([customerId])
  @@index([quoteId])
  @@index([status])
}

model SalesOrderLine {
  id           String   @id @default(uuid())
  tenantId     String
  salesOrderId String
  productId    String
  batchId      String?
  quantity     Decimal
  presentationId String?
  presentationQuantity Decimal?
  unitPrice    Decimal  @default(0)
  version      Int      @default(1)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  createdBy    String?

  salesOrder SalesOrder @relation(fields: [salesOrderId], references: [id], onDelete: Cascade)
  product    Product    @relation(fields: [productId], references: [id], onDelete: Restrict)
  batch      Batch?     @relation(fields: [batchId], references: [id], onDelete: Restrict)
  presentation ProductPresentation? @relation(fields: [presentationId], references: [id], onDelete: SetNull)

  reservations SalesOrderReservation[]

  @@index([tenantId])
  @@index([salesOrderId])
  @@index([productId])
}

model SalesOrderReservation {
  id               String   @id @default(uuid())
  tenantId         String
  salesOrderId     String
  salesOrderLineId String
  inventoryBalanceId String
  quantity         Decimal
  createdAt        DateTime @default(now())
  createdBy        String?
  releasedAt       DateTime?

  salesOrder SalesOrder @relation(fields: [salesOrderId], references: [id], onDelete: Cascade)
  line       SalesOrderLine @relation(fields: [salesOrderLineId], references: [id], onDelete: Cascade)
  balance    InventoryBalance @relation(fields: [inventoryBalanceId], references: [id], onDelete: Cascade)

  @@unique([tenantId, salesOrderLineId, inventoryBalanceId])
  @@index([tenantId])
  @@index([salesOrderId])
  @@index([salesOrderLineId])
  @@index([inventoryBalanceId])
}

model Quote {
  id         String   @id @default(uuid())
  tenantId   String
  number     String
  customerId String
  status     QuoteStatus @default(CREATED)
  isActive   Boolean  @default(true)
  processedAt DateTime?
  validityDays Int     @default(7)
  paymentMode  String  @default("CASH")
  deliveryDays Int     @default(1)
  deliveryCity String?
  deliveryZone String?
  deliveryAddress String?
  deliveryMapsUrl String?
  globalDiscountPct Decimal @default(0)
  proposalValue String?
  note       String?
  version    Int      @default(1)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  createdBy  String?

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Restrict)
  lines    QuoteLine[]
  salesOrder SalesOrder?
  stockMovementRequests StockMovementRequest[]

  @@unique([tenantId, number])
  @@index([tenantId])
  @@index([customerId])
  @@index([status])
  @@index([isActive])
}

model QuoteLine {
  id        String   @id @default(uuid())
  tenantId  String
  quoteId   String
  productId String
  quantity  Decimal
  presentationId String?
  presentationQuantity Decimal?
  unitPrice Decimal  @default(0)
  discountPct Decimal @default(0)
  version   Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String?

  quote   Quote   @relation(fields: [quoteId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)
  presentation ProductPresentation? @relation(fields: [presentationId], references: [id], onDelete: SetNull)

  @@index([tenantId])
  @@index([quoteId])
  @@index([productId])
}

model RefreshToken {
  id        String   @id @default(uuid())
  tenantId  String
  userId    String
  tokenHash String
  expiresAt DateTime
  revokedAt DateTime?
  version   Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([userId])
  @@index([expiresAt])
}

model ReportSchedule {
  id        String   @id @default(uuid())
  tenantId  String

  type      ReportScheduleType
  // Free-form key so frontend can schedule a specific report tab (MONTH/CITIES/etc)
  reportKey String
  // Filters/params saved for link + context
  params    Json

  frequency ReportFrequency
  // Time-of-day in tenant local time (best-effort)
  hour      Int      @default(8)
  minute    Int      @default(0)
  // For WEEKLY: 0=Sunday..6=Saturday
  dayOfWeek Int?
  // For MONTHLY: 1..28/29/30/31 (we clamp to month length)
  dayOfMonth Int?

  recipients String[]
  enabled   Boolean  @default(true)

  lastRunAt DateTime?
  nextRunAt DateTime?

  version   Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String?

  @@index([tenantId])
  @@index([tenantId, type])
  @@index([tenantId, enabled])
  @@index([tenantId, nextRunAt])
}

model AuditEvent {
  id          String   @id @default(uuid())
  tenantId    String
  actorUserId String?
  action      String
  entityType  String
  entityId    String?
  before      Json?
  after       Json?
  metadata    Json?
  version     Int      @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   String?

  actor User? @relation("AuditActor", fields: [actorUserId], references: [id], onDelete: SetNull)

  @@index([tenantId])
  @@index([actorUserId])
  @@index([entityType])
  @@index([createdAt])
}

model Supply {
  id        String   @id @default(uuid())
  tenantId  String
  code      String?
  name      String
  category  SupplyCategory @default(RAW_MATERIAL)
  baseUnit  String
  isActive  Boolean  @default(true)
  version   Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String?

  presentations SupplyPresentation[]
  lots          SupplyLot[]
  balances      SupplyInventoryBalance[]
  movements     SupplyStockMovement[]
  purchaseListLines SupplyPurchaseListLine[]
  receiptLines  SupplyReceiptLine[]
  recipeItems   LabRecipeItem[]
  runInputs     LabProductionRunInput[]
  runWaste      LabProductionRunWaste[]

  @@unique([tenantId, category, name])
  @@index([tenantId])
  @@index([tenantId, isActive])
  @@index([tenantId, code])
  @@index([tenantId, category])
}

model SupplyPresentation {
  id         String   @id @default(uuid())
  tenantId   String
  supplyId   String
  name       String
  multiplier Decimal  @default(1)
  isActive   Boolean  @default(true)
  version    Int      @default(1)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  createdBy  String?

  supply     Supply   @relation(fields: [supplyId], references: [id], onDelete: Cascade)
  movements  SupplyStockMovement[]
  receiptLines SupplyReceiptLine[]

  @@unique([tenantId, supplyId, name])
  @@index([tenantId])
  @@index([supplyId])
}

model SupplyLot {
  id         String   @id @default(uuid())
  tenantId   String
  supplyId   String
  lotNumber  String
  expiresAt  DateTime?
  receivedAt DateTime?
  vendorName String?
  note       String?
  version    Int      @default(1)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  createdBy  String?

  supply     Supply   @relation(fields: [supplyId], references: [id], onDelete: Restrict)
  balances   SupplyInventoryBalance[]
  movements  SupplyStockMovement[]
  receiptLines SupplyReceiptLine[]
  runInputs  LabProductionRunInput[]
  runWaste   LabProductionRunWaste[]

  @@unique([tenantId, supplyId, lotNumber])
  @@index([tenantId])
  @@index([supplyId])
  @@index([expiresAt])
}

model SupplyInventoryBalance {
  id         String   @id @default(uuid())
  tenantId   String
  locationId String
  supplyId   String
  lotId      String?
  quantity   Decimal  @default(0)
  reservedQuantity Decimal @default(0)
  version    Int      @default(1)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  createdBy  String?

  location Location @relation(fields: [locationId], references: [id], onDelete: Restrict)
  supply   Supply   @relation(fields: [supplyId], references: [id], onDelete: Restrict)
  lot      SupplyLot? @relation(fields: [lotId], references: [id], onDelete: Restrict)

  @@unique([tenantId, locationId, supplyId, lotId])
  @@index([tenantId])
  @@index([locationId])
  @@index([supplyId])
  @@index([lotId])
}

model SupplyStockMovement {
  id             String                 @id @default(uuid())
  tenantId       String
  number         String
  numberYear     Int
  type           SupplyStockMovementType
  supplyId       String
  lotId          String?
  fromLocationId String?
  toLocationId   String?
  quantity       Decimal
  presentationId String?
  presentationQuantity Decimal?
  referenceType  String?
  referenceId    String?
  note           String?
  version        Int      @default(1)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  createdBy      String?

  supply       Supply @relation(fields: [supplyId], references: [id], onDelete: Restrict)
  lot          SupplyLot? @relation(fields: [lotId], references: [id], onDelete: Restrict)
  presentation SupplyPresentation? @relation(fields: [presentationId], references: [id], onDelete: SetNull)

  @@unique([tenantId, number])
  @@index([tenantId])
  @@index([supplyId])
  @@index([lotId])
  @@index([createdAt])
}

model SupplyPurchaseList {
  id           String                 @id @default(uuid())
  tenantId     String
  laboratoryId String?
  city         String?
  number       String
  numberYear   Int
  status       SupplyPurchaseListStatus @default(DRAFT)
  note         String?
  closedAt     DateTime?
  cancelledAt  DateTime?
  cancelledBy  String?
  version      Int      @default(1)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  createdBy    String?

  laboratory Laboratory? @relation(fields: [laboratoryId], references: [id], onDelete: SetNull)
  lines       SupplyPurchaseListLine[]
  receipts    SupplyReceipt[]

  @@unique([tenantId, number])
  @@index([tenantId])
  @@index([tenantId, status])
  @@index([tenantId, city])
  @@index([laboratoryId])
  @@index([createdAt])
}

model SupplyPurchaseListLine {
  id            String   @id @default(uuid())
  tenantId      String
  purchaseListId String
  supplyId      String
  requestedQuantity Decimal
  unit          String
  vendorName    String?
  sortOrder     Int      @default(0)
  note          String?
  version       Int      @default(1)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  createdBy     String?

  purchaseList SupplyPurchaseList @relation(fields: [purchaseListId], references: [id], onDelete: Cascade)
  supply       Supply            @relation(fields: [supplyId], references: [id], onDelete: Restrict)
  receiptLines SupplyReceiptLine[]

  @@index([tenantId])
  @@index([purchaseListId])
  @@index([supplyId])
}

model SupplyReceipt {
  id           String            @id @default(uuid())
  tenantId     String
  laboratoryId String?
  purchaseListId String?
  number       String?
  numberYear   Int?
  status       SupplyReceiptStatus @default(DRAFT)
  vendorName   String?
  vendorDocument String?
  receivedAt   DateTime?
  postedAt     DateTime?
  note         String?
  cancelledAt  DateTime?
  cancelledBy  String?
  version      Int      @default(1)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  createdBy    String?

  laboratory Laboratory? @relation(fields: [laboratoryId], references: [id], onDelete: SetNull)
  purchaseList SupplyPurchaseList? @relation(fields: [purchaseListId], references: [id], onDelete: SetNull)
  lines       SupplyReceiptLine[]

  @@index([tenantId])
  @@index([laboratoryId])
  @@index([purchaseListId])
  @@index([tenantId, status])
  @@index([receivedAt])
  @@index([postedAt])
}

model SupplyReceiptLine {
  id            String   @id @default(uuid())
  tenantId      String
  receiptId     String
  supplyId      String
  purchaseListLineId String?
  lotId         String?
  quantity      Decimal
  unit          String
  presentationId String?
  presentationQuantity Decimal?
  lotNumber     String?
  expiresAt     DateTime?
  note          String?
  createdAt     DateTime @default(now())
  createdBy     String?

  receipt       SupplyReceipt @relation(fields: [receiptId], references: [id], onDelete: Cascade)
  supply        Supply        @relation(fields: [supplyId], references: [id], onDelete: Restrict)
  purchaseListLine SupplyPurchaseListLine? @relation(fields: [purchaseListLineId], references: [id], onDelete: SetNull)
  lot           SupplyLot?     @relation(fields: [lotId], references: [id], onDelete: SetNull)
  presentation  SupplyPresentation? @relation(fields: [presentationId], references: [id], onDelete: SetNull)

  @@index([tenantId])
  @@index([receiptId])
  @@index([supplyId])
  @@index([purchaseListLineId])
  @@index([lotId])
}

model LabRecipe {
  id             String   @id @default(uuid())
  tenantId       String
  productId      String
  name           String
  outputQuantity Decimal?
  outputUnit     String?
  estimatedDurationHours Int?
  isActive       Boolean  @default(true)
  version        Int      @default(1)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  createdBy      String?

  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)
  items   LabRecipeItem[]
  productionRequests LabProductionRequest[]
  productionRuns LabProductionRun[]

  @@unique([tenantId, productId])
  @@index([tenantId])
  @@index([productId])
  @@index([tenantId, isActive])
}

model LabRecipeItem {
  id        String   @id @default(uuid())
  tenantId  String
  recipeId  String
  supplyId  String
  quantity  Decimal
  unit      String
  sortOrder Int      @default(0)
  note      String?
  version   Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String?

  recipe LabRecipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  supply Supply    @relation(fields: [supplyId], references: [id], onDelete: Restrict)

  @@index([tenantId])
  @@index([recipeId])
  @@index([supplyId])
}

model LabProductionRequest {
  id          String                    @id @default(uuid())
  tenantId    String
  laboratoryId String
  productId   String
  recipeId    String
  requestedOutputQuantity Decimal
  outputUnit  String
  status      LabProductionRequestStatus @default(DRAFT)
  neededBy    DateTime?
  note        String?
  cancelledAt DateTime?
  cancelledBy String?
  version     Int      @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   String?

  laboratory Laboratory @relation(fields: [laboratoryId], references: [id], onDelete: Restrict)
  product    Product    @relation(fields: [productId], references: [id], onDelete: Restrict)
  recipe     LabRecipe  @relation(fields: [recipeId], references: [id], onDelete: Restrict)
  runs       LabProductionRun[]

  @@index([tenantId])
  @@index([laboratoryId])
  @@index([productId])
  @@index([recipeId])
  @@index([tenantId, status])
  @@index([createdAt])
}

model LabProductionRun {
  id          String                @id @default(uuid())
  tenantId    String
  laboratoryId String
  requestId   String?
  recipeId    String
  productId   String
  plannedOutputQuantity Decimal?
  outputUnit  String?
  actualOutputQuantity Decimal?
  status      LabProductionRunStatus @default(DRAFT)
  startedAt   DateTime?
  estimatedCompleteAt DateTime?
  completedAt DateTime?
  note        String?
  cancelledAt DateTime?
  cancelledBy String?
  version     Int      @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   String?

  laboratory Laboratory @relation(fields: [laboratoryId], references: [id], onDelete: Restrict)
  request    LabProductionRequest? @relation(fields: [requestId], references: [id], onDelete: SetNull)
  recipe     LabRecipe @relation(fields: [recipeId], references: [id], onDelete: Restrict)
  product    Product   @relation(fields: [productId], references: [id], onDelete: Restrict)

  inputs  LabProductionRunInput[]
  outputs LabProductionRunOutput[]
  waste   LabProductionRunWaste[]

  @@index([tenantId])
  @@index([laboratoryId])
  @@index([requestId])
  @@index([tenantId, status])
  @@index([createdAt])
}

model LabProductionRunInput {
  id        String   @id @default(uuid())
  tenantId  String
  runId     String
  supplyId  String
  lotId     String?
  quantity  Decimal
  unit      String
  note      String?
  createdAt DateTime @default(now())
  createdBy String?

  run    LabProductionRun @relation(fields: [runId], references: [id], onDelete: Cascade)
  supply Supply           @relation(fields: [supplyId], references: [id], onDelete: Restrict)
  lot    SupplyLot?        @relation(fields: [lotId], references: [id], onDelete: SetNull)

  @@index([tenantId])
  @@index([runId])
  @@index([supplyId])
  @@index([lotId])
}

model LabProductionRunOutput {
  id        String   @id @default(uuid())
  tenantId  String
  runId     String
  batchId   String
  quantity  Decimal
  unit      String
  createdAt DateTime @default(now())
  createdBy String?

  run   LabProductionRun @relation(fields: [runId], references: [id], onDelete: Cascade)
  batch Batch            @relation(fields: [batchId], references: [id], onDelete: Restrict)

  @@index([tenantId])
  @@index([runId])
  @@index([batchId])
}

model LabProductionRunWaste {
  id        String   @id @default(uuid())
  tenantId  String
  runId     String
  supplyId  String?
  lotId     String?
  quantity  Decimal
  unit      String
  reason    String?
  createdAt DateTime @default(now())
  createdBy String?

  run    LabProductionRun @relation(fields: [runId], references: [id], onDelete: Cascade)
  supply Supply?          @relation(fields: [supplyId], references: [id], onDelete: SetNull)
  lot    SupplyLot?        @relation(fields: [lotId], references: [id], onDelete: SetNull)

  @@index([tenantId])
  @@index([runId])
  @@index([supplyId])
  @@index([lotId])
}
