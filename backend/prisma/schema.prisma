generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum ModuleCode {
  WAREHOUSE
  SALES
  PRODUCTION
  DISTRIBUTION
  RND
}

enum LocationType {
  BIN
  SHELF
  FLOOR
}

enum StockMovementType {
  IN
  OUT
  TRANSFER
  ADJUSTMENT
}

enum SalesOrderStatus {
  DRAFT
  CONFIRMED
  FULFILLED
  CANCELLED
}

enum QuoteStatus {
  CREATED
  PROCESSED
}

enum ThemeMode {
  LIGHT
  DARK
}

model Tenant {
  id        String   @id @default(uuid())
  name      String
  isActive  Boolean  @default(true)
  country   String?  @default("BOLIVIA")
  logoUrl   String?
  brandPrimary  String?
  brandSecondary String?
  brandTertiary  String?
  defaultTheme ThemeMode @default(LIGHT)
  branchLimit Int    @default(1)
  currency String   @default("BOB")
  
  // Subscription Management Fields
  contactName   String?
  contactEmail  String?
  contactPhone  String?
  subscriptionExpiresAt DateTime?
  
  version   Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String?

  users   User[]
  roles   Role[]
  modules TenantModule[]
  domains TenantDomain[]
  passwordResetTokens PasswordResetToken[]

  @@index([isActive])
  @@index([subscriptionExpiresAt])
}

model ContactInfo {
  id        String   @id @default(uuid())
  // Solo debe haber un registro activo
  modalHeader String  @default("Contactos")
  modalBody   String  @default("Ãšnete a este sistema o solicita el tuyo personalizado:\n- ðŸ“§ contactos@supernovatel.com\n- ðŸ’¬ +591 65164773")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  updatedBy String?
}

model TenantDomain {
  id        String   @id @default(uuid())
  tenantId  String
  domain    String
  isPrimary Boolean  @default(false)
  verifiedAt DateTime?
  verificationToken String?
  verificationTokenExpiresAt DateTime?
  createdAt DateTime @default(now())
  createdBy String?

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([domain])
  @@index([tenantId])
}

model User {
  id           String   @id @default(uuid())
  tenantId     String
  email        String
  passwordHash String
  fullName     String?
  isActive     Boolean  @default(true)
  version      Int      @default(1)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  createdBy    String?

  tenant       Tenant   @relation(fields: [tenantId], references: [id], onDelete: Restrict)
  roles        UserRole[]
  refreshTokens RefreshToken[]
  passwordResetTokens PasswordResetToken[]
  auditEvents  AuditEvent[] @relation("AuditActor")

  @@unique([tenantId, email])
  @@index([tenantId])
  @@index([email])
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  tenantId  String
  userId    String
  tokenHash String
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())
  createdBy String?

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([tokenHash])
  @@index([tenantId])
  @@index([userId])
  @@index([expiresAt])
}

model Role {
  id        String   @id @default(uuid())
  tenantId  String
  code      String
  name      String
  isSystem  Boolean  @default(false)
  version   Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String?

  tenant      Tenant         @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  users       UserRole[]
  permissions RolePermission[]

  @@unique([tenantId, code])
  @@index([tenantId])
}

model Permission {
  id          String     @id @default(uuid())
  code        String     @unique
  module      ModuleCode
  description String?
  isSystem    Boolean    @default(true)
  createdAt   DateTime   @default(now())

  roles RolePermission[]
}

model RolePermission {
  roleId       String
  permissionId String

  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@id([roleId, permissionId])
}

model UserRole {
  userId String
  roleId String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@id([userId, roleId])
}

model TenantModule {
  id       String     @id @default(uuid())
  tenantId String
  module   ModuleCode
  enabled  Boolean    @default(true)
  version  Int        @default(1)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  createdBy String?

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, module])
  @@index([tenantId])
}

model Customer {
  id        String   @id @default(uuid())
  tenantId  String
  name      String
  businessName String?
  nit       String?
  contactName String?
  contactBirthDay Int?
  contactBirthMonth Int?
  contactBirthYear Int?
  email     String?
  phone     String?
  address   String?
  city      String?
  zone      String?
  mapsUrl   String?
  isActive  Boolean  @default(true)
  creditDays7Enabled  Boolean  @default(false)
  creditDays14Enabled Boolean  @default(false)
  version   Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String?

  salesOrders SalesOrder[]
  quotes      Quote[]

  @@index([tenantId])
  @@index([tenantId, name])
}

model Product {
  id          String   @id @default(uuid())
  tenantId    String
  sku         String
  name        String
  description String?
  photoUrl    String?
  photoKey    String?
  cost        Decimal?
  price       Decimal?
  isActive    Boolean  @default(true)
  version     Int      @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   String?

  batches Batch[]
  recipe Recipe?
  recipeItemsAsIngredient RecipeItem[] @relation("RecipeItemIngredientProduct")
  balances InventoryBalance[]
  stockMovements StockMovement[]
  salesOrderLines SalesOrderLine[]
  quoteLines      QuoteLine[]

  @@unique([tenantId, sku])
  @@index([tenantId])
  @@index([tenantId, name])
}

model Recipe {
  id             String   @id @default(uuid())
  tenantId       String
  productId      String   @unique
  name           String
  outputQuantity Decimal?
  outputUnit     String?
  version        Int      @default(1)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  createdBy      String?

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  items   RecipeItem[]

  @@unique([tenantId, productId])
  @@index([tenantId])
  @@index([productId])
}

model RecipeItem {
  id                 String   @id @default(uuid())
  tenantId           String
  recipeId           String
  ingredientProductId String?
  ingredientName     String?
  quantity           Decimal
  unit               String
  sortOrder          Int      @default(0)
  note               String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  createdBy          String?

  recipe            Recipe  @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  ingredientProduct Product? @relation("RecipeItemIngredientProduct", fields: [ingredientProductId], references: [id], onDelete: Restrict)

  @@index([tenantId])
  @@index([recipeId])
  @@index([ingredientProductId])
}

model Batch {
  id               String   @id @default(uuid())
  tenantId         String
  productId        String
  batchNumber      String
  manufacturingDate DateTime?
  expiresAt        DateTime?
  status           String   @default("RELEASED")
  version          Int      @default(1)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  createdBy        String?

  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)

  balances InventoryBalance[]
  stockMovements StockMovement[]
  salesOrderLines SalesOrderLine[]

  @@unique([tenantId, productId, batchNumber])
  @@index([tenantId])
  @@index([tenantId, productId])
  @@index([expiresAt])
}

model Warehouse {
  id        String   @id @default(uuid())
  tenantId  String
  code      String
  name      String
  city      String?
  isActive  Boolean  @default(true)
  version   Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String?

  locations Location[]
  laboratories Laboratory[]

  @@unique([tenantId, code])
  @@index([tenantId])
}

model Laboratory {
  id                String   @id @default(uuid())
  tenantId          String
  warehouseId       String
  name              String
  isActive          Boolean  @default(true)
  defaultLocationId String?
  version           Int      @default(1)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  createdBy         String?

  warehouse       Warehouse @relation(fields: [warehouseId], references: [id], onDelete: Cascade)
  defaultLocation Location? @relation("LaboratoryDefaultLocation", fields: [defaultLocationId], references: [id], onDelete: SetNull)

  @@unique([tenantId, warehouseId])
  @@index([tenantId])
  @@index([warehouseId])
}

model Location {
  id          String       @id @default(uuid())
  tenantId    String
  warehouseId String
  code        String
  type        LocationType @default(BIN)
  isActive    Boolean      @default(true)
  version     Int          @default(1)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  createdBy   String?

  warehouse Warehouse @relation(fields: [warehouseId], references: [id], onDelete: Cascade)
  balances  InventoryBalance[]
  laboratoryDefaultFor Laboratory[] @relation("LaboratoryDefaultLocation")

  @@unique([tenantId, warehouseId, code])
  @@index([tenantId])
  @@index([warehouseId])
}

model InventoryBalance {
  id         String   @id @default(uuid())
  tenantId   String
  locationId String
  productId  String
  batchId    String?
  quantity   Decimal  @default(0)
  reservedQuantity Decimal @default(0)
  version    Int      @default(1)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  createdBy  String?

  location Location @relation(fields: [locationId], references: [id], onDelete: Restrict)
  product  Product  @relation(fields: [productId], references: [id], onDelete: Restrict)
  batch    Batch?   @relation(fields: [batchId], references: [id], onDelete: Restrict)

  reservations SalesOrderReservation[]

  @@unique([tenantId, locationId, productId, batchId])
  @@index([tenantId])
  @@index([productId])
  @@index([batchId])
}

model StockMovement {
  id             String           @id @default(uuid())
  tenantId       String
  number         String
  numberYear     Int
  type           StockMovementType
  productId      String
  batchId        String?
  fromLocationId String?
  toLocationId   String?
  quantity       Decimal
  referenceType  String?
  referenceId    String?
  note           String?
  version        Int      @default(1)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  createdBy      String?

  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)
  batch   Batch?  @relation(fields: [batchId], references: [id], onDelete: Restrict)

  @@unique([tenantId, number])

  @@index([tenantId])
  @@index([productId])
  @@index([batchId])
  @@index([createdAt])
}

model TenantSequence {
  id           String   @id @default(uuid())
  tenantId     String
  year         Int
  key          String
  currentValue Int      @default(0)
  updatedAt    DateTime @updatedAt

  @@unique([tenantId, year, key])
  @@index([tenantId])
}

model SalesOrder {
  id         String           @id @default(uuid())
  tenantId   String
  number     String
  customerId String
  quoteId    String?
  status     SalesOrderStatus @default(DRAFT)
  note       String?
  deliveryDate DateTime?
  deliveryCity String?
  deliveryZone String?
  deliveryAddress String?
  deliveryMapsUrl String?
  version    Int              @default(1)
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt
  createdBy  String?

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Restrict)
  quote    Quote?   @relation(fields: [quoteId], references: [id], onDelete: Restrict)
  lines    SalesOrderLine[]
  reservations SalesOrderReservation[]

  @@unique([tenantId, number])
  @@unique([quoteId])
  @@index([tenantId])
  @@index([customerId])
  @@index([quoteId])
  @@index([status])
}

model SalesOrderLine {
  id           String   @id @default(uuid())
  tenantId     String
  salesOrderId String
  productId    String
  batchId      String?
  quantity     Decimal
  unitPrice    Decimal  @default(0)
  version      Int      @default(1)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  createdBy    String?

  salesOrder SalesOrder @relation(fields: [salesOrderId], references: [id], onDelete: Cascade)
  product    Product    @relation(fields: [productId], references: [id], onDelete: Restrict)
  batch      Batch?     @relation(fields: [batchId], references: [id], onDelete: Restrict)

  reservations SalesOrderReservation[]

  @@index([tenantId])
  @@index([salesOrderId])
  @@index([productId])
}

model SalesOrderReservation {
  id               String   @id @default(uuid())
  tenantId         String
  salesOrderId     String
  salesOrderLineId String
  inventoryBalanceId String
  quantity         Decimal
  createdAt        DateTime @default(now())
  createdBy        String?

  salesOrder SalesOrder @relation(fields: [salesOrderId], references: [id], onDelete: Cascade)
  line       SalesOrderLine @relation(fields: [salesOrderLineId], references: [id], onDelete: Cascade)
  balance    InventoryBalance @relation(fields: [inventoryBalanceId], references: [id], onDelete: Cascade)

  @@unique([tenantId, salesOrderLineId, inventoryBalanceId])
  @@index([tenantId])
  @@index([salesOrderId])
  @@index([salesOrderLineId])
  @@index([inventoryBalanceId])
}

model Quote {
  id         String   @id @default(uuid())
  tenantId   String
  number     String
  customerId String
  status     QuoteStatus @default(CREATED)
  processedAt DateTime?
  validityDays Int     @default(7)
  paymentMode  String  @default("CASH")
  deliveryDays Int     @default(1)
  deliveryCity String?
  deliveryZone String?
  deliveryAddress String?
  deliveryMapsUrl String?
  globalDiscountPct Decimal @default(0)
  proposalValue String?
  note       String?
  version    Int      @default(1)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  createdBy  String?

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Restrict)
  lines    QuoteLine[]
  salesOrder SalesOrder?

  @@unique([tenantId, number])
  @@index([tenantId])
  @@index([customerId])
  @@index([status])
}

model QuoteLine {
  id        String   @id @default(uuid())
  tenantId  String
  quoteId   String
  productId String
  quantity  Decimal
  unitPrice Decimal  @default(0)
  discountPct Decimal @default(0)
  version   Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String?

  quote   Quote   @relation(fields: [quoteId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([tenantId])
  @@index([quoteId])
  @@index([productId])
}

model RefreshToken {
  id        String   @id @default(uuid())
  tenantId  String
  userId    String
  tokenHash String
  expiresAt DateTime
  revokedAt DateTime?
  version   Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([userId])
  @@index([expiresAt])
}

model AuditEvent {
  id          String   @id @default(uuid())
  tenantId    String
  actorUserId String?
  action      String
  entityType  String
  entityId    String?
  before      Json?
  after       Json?
  metadata    Json?
  version     Int      @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   String?

  actor User? @relation("AuditActor", fields: [actorUserId], references: [id], onDelete: SetNull)

  @@index([tenantId])
  @@index([actorUserId])
  @@index([entityType])
  @@index([createdAt])
}
